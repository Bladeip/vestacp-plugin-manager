#!/usr/bin/env bash

source /usr/local/vesta/plugin-manager/func/helpers.sh

plugin_name="$1"
format="${2:-shell}"

plugins_list="$(cat "/usr/local/vesta/conf/plugins.json")"
plugin="$(echo "${plugins_list}" | jq -r ".\"$plugin_name\"")"

if [[ "$plugin" && "$plugin" != "null" ]]; then
    case "$format" in
        json)   echo "$plugin" ;;
        plain)  json_to 'plain' "[$plugin]" "name|version|repository|user-role|enabled|date" ;;
        shell)  json_to 'shell' "[$plugin]" "name|version|repository|user-role|enabled|date" ;;
        csv)    json_to 'csv' "[$plugin]" "name|version|repository|user-role|enabled|date|description" ;;
    esac
fi
